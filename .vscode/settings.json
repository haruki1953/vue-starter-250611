{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts, components.d.ts, auto-imports.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig, postcss.config.*, tailwind.config.*"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // "editor.formatOnSave": true,
  // "editor.defaultFormatter": "esbenp.prettier-vscode"
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "scss.lint.unknownAtRules": "ignore",
  "css.lint.unknownAtRules": "ignore",
  // https://github.com/tailwindlabs/tailwindcss/discussions/7554#discussioncomment-3030988
  // vscode://settings/tailwindCSS.classAttributes
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class:list",
    // 让含有style的变量可以得到tailwind提示
    ".*[Ss]tyle.*", 
  ],
}